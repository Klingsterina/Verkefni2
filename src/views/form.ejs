<%- include('header') -%>
<h1>Senda inn spurningu</h1>
<div class="container">
  <form id="questionForm" method="post">
    <div class="spurning">
      <label for="questionText">Spurning:</label>
      <textarea id="questionText" name="text" placeholder="Skrifa spurningu:"></textarea>
      <!-- <p id="questionError" style="color: red; display: none;">Spurning m√° ekki vera lengri en 150 stafir.</p> -->
    </div>
    <div class="heiti-flokks">
      <label for="category">Heiti flokks:</label>
      <select id="category" name="flokkur">
        <option value="1">HTML</option>
        <option value="2">CSS</option>
        <option value="3">JavaScript</option>
      </select>
    </div>
    
    <div id="answers">
      <div class="answer">
        <input type="text" name="svar[]" placeholder="Svarm√∂guleiki 1">
        <input type="radio" name="rett_svar" value="0"> R√©tt svar
      </div>
    </div>
    <button type="button" id="addAnswer">B√¶ta vi√∞ svarm√∂guleika</button>
    <button type="submit" class="submit">Senda inn</button>
  </form>
<%- include('tilbaka') -%>
</div>

</body>

</html>

<script>
document.getElementById("addAnswer").addEventListener("click", function() {
  var container = document.getElementById("answers");
  var count = container.getElementsByClassName("answer").length;
  
  var div = document.createElement("div");
  div.className = "answer";
  div.innerHTML = `
    <input type="text" name="svar[]" placeholder="Svarm√∂guleiki ${count + 1}">
    <input type="radio" name="rett_svar" value="${count}"> R√©tt svar
  `;
  container.appendChild(div);
});

document.getElementById("questionForm").addEventListener("submit", function(event) {
  event.preventDefault(); // Prevent default form submission

  var question = document.getElementById("questionText").value;
  var category = document.getElementById("category").value;
  var answers = [];
  var correctAnswer = null;

  // Athuga lengd spurningar
  if (question.length === 0) {
    alert("Spurning m√° ekki vera t√≥m");
    return;
  }
  if (question.length > 100) {
    alert("Spurning m√° ekki vera lengri en 150 stafir.");
  }
  
  document.querySelectorAll("#answers .answer").forEach((el, index) => {
    var answerText = el.querySelector("input[type='text']").value;
    var isCorrect = el.querySelector("input[type='radio']").checked;
    if (answerText.length > 1) {
      answers.push(answerText);
      if (isCorrect) correctAnswer = index;
    }
  });

  if (answers.length < 2) {
    alert("√ûa√∞ √æarf a√∞ vera a.m.k. tveir svarm√∂guleikar.");
    return;
  }

  if (correctAnswer === null) {
    alert("Veldu r√©tt svar!");
    return;
  }

  var data = {
    question: question,
    category: category,
    answers: answers,
    correctAnswer: correctAnswer
  };
  console.log(data)
  console.log(JSON.stringify(data))

  fetch("/form", {
  method: "POST",
  headers: {
    "Content-Type": "application/json",
    "Accept": "application/json" // üîπ Tell the server this is a fetch() request
  },
  body: JSON.stringify(data)
})
.then(response => response.json())
.then(result => {
  if (result.redirect) {
    window.location.href = result.redirect; // üîπ Redirect to the EJS page
  }
})
.catch(error => {
  console.error("Villa vi√∞ a√∞ senda:", error);
  alert("Villa vi√∞ a√∞ senda spurningu.");
});

});
</script>
